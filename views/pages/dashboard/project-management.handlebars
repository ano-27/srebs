<div class="project-management">
    <h2>Product Management</h2>

    <div class="tabs">
        <a href="/dashboard/project" class="tab active">Project Management</a>
        <a href="/dashboard/return" class="tab">Return Management</a>
        <a href="#" class="tab" id="logoutElem">Log Out</a>
    </div>
    <br><br>
    <div class="actions">
        <button id="add-product">Add New Product</button>
    </div>
    
    <table class="products-table" border = 0>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    
    {{!-- Form to Register New Product / Edit Existing Product --}}
    <div id="product-form-container" style="display: none;">
        <h3 id = "product-form-head"> Add/Edit Product</h3>
        <form id="product-form">
            <input type="hidden" id="product_id" name="id">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" id="price" name="price" required>
            </div>
            <div class="form-group">
                <label for="product_type">Product Type</label>
                <select id="product_type" name="product_type">
                    <option value="singular">Singular</option>
                    <option value="dozen">Dozen</option>
                    <option value="loose_gram">Loose (gram)</option>
                    <option value="loose_ml">Loose (ml)</option>
                </select>
            </div>
            <div class="form-group">
                <label for="return_window">Return Window (days)</label>
                <input type="number" id="return_window" name="return_window">
            </div>
            <div class="form-group">
                <label for="register_expiry" id="register_expiry_label" style="display: none;">Expiry</label>
                <input type="date" id="register_expiry" name="register_expiry">
            </div>
            <div class="form-group">
                <label for="register_stock" id="register_stock_label" style="display: none;">Stock</label>
                <input type="number" id="register_stock" name="register_stock">
            </div>
            <button type="submit">Save Product</button>
            <button type="button" id="cancel-form">Cancel</button>
        </form>
    </div>

    {{!-- Form to Register New Batch of Stock for a Product --}}
    <div id="new-batch-form-container" style="display: none;">
        <h3>Add New Batch</h3>
        <p>Product: <span id="batch_product_name"></span></p>
        <form id="new-batch-form">
            <input type="hidden" id="batch_product_id" name="product_id">
            <div class="form-group">
                <label for="batch_stock">Stock Quantity</label>
                <input type="number" id="batch_stock" name="stock" required>
            </div>
            <div class="form-group">
                <label for="batch_expiry">Expiry Date</label>
                <input type="date" id="batch_expiry" name="expiry">
            </div>
            <button type="submit">Add Batch</button>
            <button type="button" id="cancel-batch-form">Cancel</button>
        </form>
    </div>

    {{!-- Form to Edit Inventory --}}
    <div id="edit-inventory-form-container" style="display: none;">
        <h3>Edit Inventory</h3>
        <form id="edit-inventory-form">
            <input type="hidden" id="edit_inventory_id" name="inventory_id">
            <div class="form-group">
                <label for="edit_inventory_stock">Stock Quantity</label>
                <input type="number" id="edit_inventory_stock" name="stock" required>
            </div>
            <div class="form-group">
                <label for="edit_inventory_expiry">Expiry Date</label>
                <input type="date" id="edit_inventory_expiry" name="expiry">
            </div>
            <button type="submit">Update Inventory</button>
            <button type="button" id="cancel-edit-inventory">Cancel</button>
        </form>
    </div>
</div>

<script src = "/js/product-list.js"></script>